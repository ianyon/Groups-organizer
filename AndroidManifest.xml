<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cl.dcc.Groups_Organizer"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET" />    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application android:label="@string/app_name"
                 android:name="cl.dcc.Groups_Organizer.app.GroupsOrganizerApp"
                 android:icon="@drawable/app_icon"
                 android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:name="cl.dcc.Groups_Organizer.ui.Login"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="cl.dcc.Groups_Organizer.ui.PagerViewHost"/>
        <activity android:name="cl.dcc.Groups_Organizer.ui.Register"/>
    </application>
</manifest>